    <form action="/contacts" method="POST">
      <div class="form-group">
        <label for="name"></label>
        <div class="col-5">
          <input
            name="name"
            type="text"
            class="form-control"
            placeholder="Enter name"
          />
          <small class="form-text text-muted">Required</small>
        </div>
      </div>

      <div class="form-group">
        <label for="phone"></label>
        <div class="col-5">
          <input
            name="phone"
            type="number"
            class="form-control"
           
            placeholder="Phone Number"
          />
        </div>
      </div>
        <div class="form-group">
            <label for="email"></label>
            <div class="col-5">
              <input
                name="email"
                type="text"
                class="form-control"
               
                placeholder="E-mail"
              />
              <small class="form-text text-muted">Required</small>
            </div>
      </div>
      <div class="form-group">
          <label for="message"></label>
          <div class="col-5">
          <textarea required name='message' class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Message"></textarea>
          <small class="form-text text-muted">Required</small>
          </div>
        </div>
      <div class="col-2">
        <button type="submit" value="Submit" class="btn btn-success">
          Submit
        </button>
      </div>
