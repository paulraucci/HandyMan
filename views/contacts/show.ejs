<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title></title>
  </head>
  <body>
    <%include ../partials/head.ejs%>
    <!--  -->
    <%include ../partials/img.ejs%>
    <!--  -->
    <%include ../partials/nav.ejs%>
    <h1>Contacts</h1>
    <div class="allContact">
      <%for (let i = 0; i < Contact.length; i++){%>
      <div class="contactCard">
        <h4>Name: <%=Contact[i].name%></h4>
        <h4>Phone: <%=Contact[i].phone%></h4>
        <h4>E-mail: <%=Contact[i].email%></h4>
        <h4>Message: <%=Contact[i].message%></h4>
        <a href="/contacts/<%=Contact[i].id; %>/edit">Edit</a>
        <form
          action="/contacts/<%=Contact[i].id;%>?_method=DELETE"
          method="POST"
        >
          <input type="submit" value="DELETE" />
        </form>
      </div>
      <%}%>
    </div>
    <%include ../partials/foot.ejs%>
  </body>
</html>
